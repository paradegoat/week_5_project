<!DOCTYPE html>
<html>
<head>
  <title>Mystery Word Game</title>
  <meta charset="UTF-8">
  <link href="style.css" rel="stylesheet">
</head>
<body>
  <h1 id="mystery">mystery game</h1>


  <div id="letter-wrapper">
    {{#game.display}}
    <div class="letters">{{.}}</div>
    {{/game.display}}
  </div>

  <form action="/" method="post">
    {{#game.playing}}
    <input type="text" name="guessLetter" placeholder="sup" maxlength="1" autofocus>
    {{/game.playing}}

    {{#game.lose}}
    <p id="lose">{{game.status}}</p>
    {{/game.lose}}
    <input type="submit" value="{{game.textBtn}}">

    {{#game.playing}}
    <p id="guesses">letters guessed: {{game.lettersGuessed}}</p>
    <p id="message">{{game.message}}</p>
    {{/game.playing}}
  </form>

  <p>{{game.guessesLeft}}</p>
  <p>Guesses Left</p>

</body>
</html>
